extends layout

block nav-content
    li.active
        a(href='/')
            i.icon-home.icon-white
            | Home

block content
    .row
        .span10#fakeFrame
            iframe(id= 'followFrame',src='http://ojfinal.herokuapp.com/broadcast',
                style="width:99%; overflow: scroll")
        .span2(style="display: inline-block; height: 600px;")
            div(style="height: 10%")
                h4 Incoming Messages:
            div(style="height: 76%")
                textarea#textpad    
            center(style="width: 100%")
                button.btn.btn-medium.notify#slow Slow down. I'm lost!
                button.btn.btn-medium.notify#perfect This is the perfect pace.
                button.btn.btn-medium.notify#speed Speed up!
    br
    button.btn.btn-medium.btn-warning.active#sync(style="width: 100%",onclick="sync()", style="width: 82.5%") SYNC


block js-load
    script(src='/javascripts/follow.js')

